<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <!-- 1. User Stats Card (Top Section) -->
  <div class="md:col-span-3 group relative rounded-3xl p-[1px] bg-gradient-to-br from-white/10 to-white/5 hover:from-amber-500 hover:to-orange-500 transition-all duration-500">
    <div class="relative h-full w-full bg-[#0a0a0a] rounded-3xl overflow-hidden flex flex-col md:flex-row items-center justify-between p-8">

      <!-- User Position and Points -->
      <div class="flex-1 text-center md:text-left">
        <h3 class="text-gray-500 text-xs font-bold uppercase tracking-[0.2em] mb-2">Sua Posi√ß√£o</h3>
        <div class="flex items-center gap-4">
          <div class="text-5xl md:text-6xl font-black italic text-white leading-none">
            P<%= @position %>
          </div>
          <div class="hidden md:block h-16 w-px bg-gray-800"></div>
          <div class="text-left">
            <div class="text-2xl md:text-3xl font-bold text-white">
              <%= @total_points %> <span class="text-sm text-gray-500 font-normal">Pontos</span>
            </div>
            <div class="text-gray-400 text-sm mt-1">
              <%= @bets_count %> <%= @bets_count == 1 ? 'aposta' : 'apostas' %> realizadas
            </div>
          </div>
        </div>
      </div>

      <!-- Betting Progress -->
      <div class="mt-6 md:mt-0 md:ml-8 flex-1">
        <% if current_user %>
          <% next_race = @upcoming_races.first %>
          <% user_bet = next_race&.bets&.find_by(user_id: current_user.id) if next_race %>

          <% if next_race && !next_race.locked? %>
            <% if user_bet %>
              <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-900/20 border border-green-700/30 text-green-400">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
                <span class="text-sm font-medium">Aposta feita</span>
              </div>
            <% else %>
              <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-amber-900/20 border border-amber-700/30 text-amber-400">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"></path></svg>
                <span class="text-sm font-medium">Fa√ßa sua aposta</span>
              </div>
            <% end %>

            <% time_until_race = distance_of_time_in_words(Time.current, next_race.start_time) %>
            <p class="text-gray-400 text-sm mt-2">
              Fecha em <%= time_until_race %>
            </p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 2. Next Race Card -->
  <div class="md:col-span-2 group relative rounded-3xl p-[1px] bg-gradient-to-br from-white/10 to-white/5 hover:from-[#FF8700] hover:to-purple-600 transition-all duration-500">
    <div class="relative h-full w-full bg-[#0a0a0a] rounded-3xl overflow-hidden flex flex-col justify-between p-8">
      <% next_race = @upcoming_races.first %>

      <div class="absolute inset-0 bg-gradient-to-r from-[#0a0a0a] via-[#0a0a0a]/80 to-transparent pointer-events-none"></div>

      <div class="relative z-10">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-[#FF8700]/10 border border-[#FF8700]/20 text-[#FF8700] text-xs font-bold uppercase tracking-wider mb-6 backdrop-blur-md">
          <span class="w-1.5 h-1.5 rounded-full bg-[#FF8700] animate-pulse"></span>
          Pr√≥ximo Grande Pr√™mio
        </div>

        <% if next_race %>
          <div class="flex flex-col md:flex-row md:items-center gap-4 mb-4">
            <h2 class="text-3xl md:text-4xl font-black italic text-white leading-none uppercase tracking-tighter">
              <%= next_race_display_name(next_race) %>
            </h2>

            <% if next_race&.country_flag_url.present? %>
              <%= image_tag next_race.country_flag_url, class: "h-8 w-auto p-2 rounded shadow-[0_0_15px_rgba(255,255,255,0.1)]" %>
            <% end %>
          </div>

          <div class="space-y-3">
            <p class="text-gray-300 font-medium text-lg">
              <%= next_race.location %>
            </p>

            <div class="flex items-center gap-4 text-gray-400">
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span><%= format_date_pt_br(next_race.date) %></span>
              </div>

              <% if next_race.start_time %>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span><%= next_race.start_time.strftime("%H:%M") %></span>
                </div>
              <% end %>
            </div>
          </div>

          <% track_url = next_race&.circuit_image_url %>
          <% if track_url.present? %>
            <div class="mt-6 flex justify-center">
              <div class="relative w-full max-w-md">
                <%= image_tag track_url, alt: "Track layout", class: "max-w-full h-auto max-h-40 object-contain opacity-80" %>
                <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] to-transparent pointer-events-none"></div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-12">
            <div class="text-4xl md:text-5xl font-black italic text-white/20 mb-4">üèÅ</div>
            <h2 class="text-2xl font-bold text-white mb-2">Temporada Encerrada</h2>
            <p class="text-gray-400">Volte na pr√≥xima temporada!</p>
          </div>
        <% end %>
      </div>

      <% if next_race %>
        <div class="relative z-10 mt-8">
          <%= link_to race_path(next_race), class: "group/btn inline-flex items-center justify-center gap-3 w-full md:w-auto px-6 py-3 rounded-xl bg-gradient-to-r from-[#FF8700]/20 to-purple-600/20 border border-[#FF8700]/30 text-white hover:from-[#FF8700] hover:to-purple-600 transition-all" do %>
            <span class="font-semibold">Ver Corrida</span>
            <svg class="w-5 h-5 transform group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 3. Quick Stats Card -->
  <div class="md:col-span-1 group relative rounded-3xl p-[1px] bg-gradient-to-br from-white/10 to-white/5 hover:from-blue-500 hover:to-cyan-400 transition-all duration-500">
    <div class="h-full w-full bg-[#0a0a0a] rounded-3xl p-6 flex flex-col justify-between">
      <div>
        <h3 class="text-gray-500 text-xs font-bold uppercase tracking-[0.2em] mb-6">Estat√≠sticas</h3>

        <div class="space-y-4">
          <div class="flex items-center justify-between p-3 rounded-lg bg-blue-500/5 border border-blue-500/10">
            <div class="flex items-center gap-3">
              <div class="p-2 rounded-lg bg-blue-500/10">
                <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <div>
                <div class="text-sm text-gray-400">Posi√ß√£o M√©dia</div>
                <div class="text-xl font-bold text-white"><%= @position %></div>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-between p-3 rounded-lg bg-emerald-500/5 border border-emerald-500/10">
            <div class="flex items-center gap-3">
              <div class="p-2 rounded-lg bg-emerald-500/10">
                <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <div class="text-sm text-gray-400">Pontos por Aposta</div>
                <div class="text-xl font-bold text-white">
                  <% if @bets_count > 0 %>
                    <%= (@total_points.to_f / @bets_count).round(1) %>
                  <% else %>
                    0
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-6">
        <%= link_to bet_positions_path, class: "block text-center w-full py-3 rounded-lg bg-gradient-to-r from-blue-500/20 to-cyan-500/20 border border-blue-500/30 text-blue-400 hover:text-white hover:from-blue-500 hover:to-cyan-500 transition-all" do %>
          Ver Todas Apostas
        <% end %>
      </div>
    </div>
  </div>

  <!-- 4. Quick Actions -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:col-span-3">
    <div class="group relative rounded-3xl p-[1px] bg-gradient-to-br from-white/10 to-white/5 hover:from-green-500 hover:to-emerald-400 transition-all duration-500">
      <%= link_to bet_positions_path, class: "block h-full w-full bg-[#0a0a0a] rounded-3xl p-6 relative overflow-hidden" do %>
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-green-900/20 rounded-xl text-green-400 group-hover:text-white group-hover:bg-green-500 transition-all">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
          <svg class="w-5 h-5 text-gray-600 group-hover:text-white transform group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-white group-hover:text-green-400 transition-colors">Minhas Apostas</h3>
        <p class="text-sm text-gray-400 mt-2">Gerencie e acompanhe todas as suas apostas</p>
      <% end %>
    </div>

    <div class="group relative rounded-3xl p-[1px] bg-gradient-to-br from-white/10 to-white/5 hover:from-purple-500 hover:to-pink-400 transition-all duration-500">
      <%= link_to championship_results_path, class: "block h-full w-full bg-[#0a0a0a] rounded-3xl p-6 relative overflow-hidden" do %>
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-purple-900/20 rounded-xl text-purple-400 group-hover:text-white group-hover:bg-purple-500 transition-all">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <svg class="w-5 h-5 text-gray-600 group-hover:text-white transform group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-white group-hover:text-purple-400 transition-colors">Ranking Geral</h3>
        <p class="text-sm text-gray-400 mt-2">Veja quem est√° liderando o campeonato</p>
      <% end %>
    </div>
  </div>
</div>
