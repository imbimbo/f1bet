<div class="md:col-span-2 group relative rounded-3xl p-[1px] bg-gradient-to-br from-white/10 to-white/5 hover:from-[#FF8700] hover:to-purple-600 transition-all duration-500 ">

    <div class="relative h-full w-full bg-[#0a0a0a] rounded-3xl overflow-hidden flex flex-col justify-between p-8">

      <% next_race = @upcoming_races.first %>

      <div class="absolute inset-0 bg-gradient-to-r from-[#0a0a0a] via-[#0a0a0a]/80 to-transparent pointer-events-none"></div>

      <div class="relative z-10 ">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-[#FF8700]/10 border border-[#FF8700]/20 text-[#FF8700] text-xs font-bold uppercase tracking-wider mb-6 backdrop-blur-md">
          <span class="w-1.5 h-1.5 rounded-full bg-[#FF8700] animate-pulse"></span>
          Próximo Grande Prêmio
        </div>

        <div class="flex items-center gap-4 mb-2 px-8">
          <h2 class="text-4xl md:text-5xl font-black italic text-white leading-none uppercase tracking-tighter mt-8">
            <%= next_race&.name || "Season Over" %>
          </h2>

          <% if next_race&.country_flag_url.present? %>
            <%= image_tag next_race.country_flag_url, class: "h-8 w-auto p-3 rounded shadow-[0_0_15px_rgba(255,255,255,0.1)]" %>
          <% end %>
        </div>

        <p class="text-gray-400 font-medium text-lg border-l-2 border-gray-700 pl-3 ml-1 mb-6">
          <%= next_race&.location %>
        </p>

        <% track_url = next_race&.circuit_image_url || track_image_for(next_race&.location.to_s) %>

        <% if track_url.present? %>
          <div class="flex justify-center items-center my-4">
            <%= image_tag track_url, alt: "Track layout", class: "max-w-full h-auto max-h-32 object-contain" %>
          </div>
        <% end %>
      </div>

      <div class="relative z-10 mt-8 mb-8">
        <% if next_race %>
          <%= link_to race_path(next_race), class: "group/btn inline-flex items-center gap-3" do %>
            <div class="h-12 w-12 rounded-full bg-[#FF8700] text-black flex items-center justify-center font-bold transition-transform group-hover/btn:scale-110 shadow-[0_0_20px_rgba(255,135,0,0.4)]">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="md:col-span-1 md:row-span-2 group relative rounded-3xl p-[1px] bg-gradient-to-br from-white/10 to-white/5 hover:from-blue-500 hover:to-cyan-400 transition-all duration-500">
    <div class="h-full w-full bg-[#0a0a0a] rounded-3xl p-8 flex flex-col items-center justify-center text-center relative overflow-hidden">

      <div class="absolute top-0 right-0 w-32 h-32 bg-blue-500/10 blur-[50px] rounded-full group-hover:bg-blue-500/20 transition-all"></div>

      <h3 class="text-gray-500 text-xs font-bold uppercase tracking-[0.2em] mb-4">Championship</h3>

      <div class="text-[8rem] leading-none font-black italic text-white tracking-tighter mix-blend-overlay opacity-50 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 select-none">
        <%= @position %>
      </div>

      <div class="relative z-10">
        <div class="text-6xl font-black italic text-white mb-2">P<%= @position %></div>
        <div class="text-sm font-mono text-blue-400 bg-blue-500/10 px-3 py-1 rounded border border-blue-500/20 inline-block">
          <%= @total_points %> Points
        </div>
      </div>

    </div>
  </div>

  <div class="md:col-span-1 group relative rounded-3xl p-[1px] bg-gradient-to-br from-white/10 to-white/5 hover:from-green-500 hover:to-emerald-400 transition-all duration-500">
    <%= link_to root_path, class: "block h-full w-full bg-[#0a0a0a] rounded-3xl p-6 relative overflow-hidden" do %> <div class="flex items-center justify-between mb-4">
        <div class="p-3 bg-green-900/20 rounded-xl text-green-400 group-hover:text-white group-hover:bg-green-500 transition-all">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        </div>
        <svg class="w-5 h-5 text-gray-600 group-hover:text-white transform group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
      </div>
      <h3 class="text-xl font-bold text-white group-hover:text-green-400 transition-colors">Minhas Apostas</h3>
      <p class="text-xs text-gray-500 mt-1">Manage your active bets</p>
    <% end %>
  </div>

  <div class="md:col-span-1 group relative rounded-3xl p-[1px] bg-gradient-to-br from-white/10 to-white/5 hover:from-purple-500 hover:to-pink-400 transition-all duration-500">
    <%= link_to root_path, class: "block h-full w-full bg-[#0a0a0a] rounded-3xl p-6 relative overflow-hidden" do %> <div class="flex items-center justify-between mb-4">
        <div class="p-3 bg-purple-900/20 rounded-xl text-purple-400 group-hover:text-white group-hover:bg-purple-500 transition-all">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>
        </div>
        <svg class="w-5 h-5 text-gray-600 group-hover:text-white transform group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
      </div>
      <h3 class="text-xl font-bold text-white group-hover:text-purple-400 transition-colors">Global Ranking</h3>
      <p class="text-xs text-gray-500 mt-1">See who is leading</p>
    <% end %>
  </div>

</div>
