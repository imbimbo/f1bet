<%= form_with(model: user, url: registration_path(user)) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="bg-red-500/20 border border-red-500/50 text-red-300 px-4 py-3 font-medium rounded-md mb-6">
      <h2 class="font-bold mb-2"><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul class="list-disc ml-6">
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name -->
  <div class="mb-4 sm:mb-5 flex flex-col items-center">
    <%= form.label :name, class: "block text-lg sm:text-xl md:text-2xl font-medium text-gray-300 mb-2 w-full max-w-full sm:max-w-md" %>
    <%= form.text_field :name, class: "w-full max-w-full sm:max-w-md px-4 py-2 bg-[#0F0F0F] border #{user.errors[:name].any? ? 'border-red-500' : 'border-gray-700'} rounded-md text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent mb-4 sm:mb-6" %>
  </div>

  <!-- Email -->
  <div class="mb-4 sm:mb-5 flex flex-col items-center">
    <%= form.label :email, class: "block text-lg sm:text-xl md:text-2xl font-medium text-gray-300 mb-2 w-full max-w-full sm:max-w-md" %>
    <%= form.email_field :email, class: "w-full max-w-full sm:max-w-md px-4 py-2 bg-[#0F0F0F] border #{user.errors[:email].any? ? 'border-red-500' : 'border-gray-700'} rounded-md text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent mb-4 sm:mb-6" %>
  </div>

  <!-- Password -->
  <div class="mb-4 sm:mb-5 flex flex-col items-center">
    <%= form.label :password, class: "block text-lg sm:text-xl md:text-2xl font-medium text-gray-300 mb-2 w-full max-w-full sm:max-w-md" %>
    <%= form.password_field :password, autocomplete: "new-password", class: "w-full max-w-full sm:max-w-md px-4 py-2 bg-[#0F0F0F] border #{user.errors[:password].any? ? 'border-red-500' : 'border-gray-700'} rounded-md text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent mb-4 sm:mb-6" %>
  </div>

  <!-- Password confirmation -->
  <div class="mb-4 sm:mb-5 flex flex-col items-center">
    <%= form.label :password_confirmation, class: "block text-lg sm:text-xl md:text-2xl font-medium text-gray-300 mb-2 w-full max-w-full sm:max-w-md" %>
    <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "w-full max-w-full sm:max-w-md px-4 py-2 bg-[#0F0F0F] border border-gray-700 rounded-md text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent mb-4 sm:mb-6" %>
  </div>

  <div class="mb-4 sm:mb-6 flex justify-center">
    <button type="submit" class="w-full sm:w-auto text-lg sm:text-xl md:text-2xl bg-gradient-to-b from-orange-400 via-orange-500 to-orange-600 hover:from-orange-500 hover:via-orange-600 hover:to-orange-700 text-black font-bold py-3 px-6 sm:px-8 rounded-md transition-all duration-200 cursor-pointer shadow-lg shadow-orange-500/30 border border-orange-600/20">
      Sign up
    </button>
  </div>
<% end %>
